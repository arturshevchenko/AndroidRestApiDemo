<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Pet ID"
        android:id="@+id/pet_id"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Pet Name"
        android:id="@+id/pet_name"/>
    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Pet Status"
        android:id="@+id/status"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:id="@+id/submit_btn"
        android:text="Create Pet"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/teal_700" />
    <TextView
        android:id="@+id/resplbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Your response is:" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:id="@+id/result"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/purple_700" />
    <TextView
        android:id="@+id/getlbl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get pet By ID:" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Enter Pet ID"
        android:id="@+id/find_pet_id"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:id="@+id/find_pet_btn"
        android:text="Find Pet"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/teal_700" />
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:id="@+id/result_find"/>

</LinearLayout>